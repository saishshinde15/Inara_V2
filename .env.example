# ============================================================
# Inara V2 - Universal Enterprise Assistant
# ============================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env with real credentials to git!

# ============================================================
# Bot & Company Configuration
# ============================================================
# Bot/Product Identity
BOT_NAME=Inara
BOT_DESCRIPTION=Universal Enterprise Assistant powered by Deep Agents

# Company Details (customize for your organization)
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Business Park, City, State - 400001
HR_EMAIL=hr@yourcompany.com
SUPPORT_CONTACT_EMAIL=support@yourcompany.com

# ============================================================
# AWS Bedrock Configuration (Primary LLM and Embeddings)
# ============================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# S3 Document Storage
S3_BUCKET_NAME=your-hr-documents-bucket

# S3 Prefixes for role-based access control
S3_EXECUTIVE_PREFIX=Executive-Only-Documents/
S3_EMPLOYEE_PREFIX=Regular-Employee-Documents/
S3_MASTER_PREFIX=Master-Document/

# Model Configuration
LLM_MODEL=bedrock/amazon.nova-lite-v1:0
EMBEDDING_MODEL=bedrock/amazon.titan-embed-text-v2:0

# Specialist Agent LLM (Amazon Nova Lite - cost-efficient)
SPECIALIST_LLM_MODEL=bedrock/amazon.nova-lite-v1:0
SPECIALIST_LLM_TEMPERATURE=0.7
SPECIALIST_LLM_MAX_TOKENS=4000

# ============================================================
# Manager Agent - OpenAI (Optional, uses Bedrock by default)
# ============================================================
OPENAI_API_KEY=your_openai_api_key
MANAGER_LLM_MODEL=amazon.nova-lite-v1:0
MANAGER_LLM_TEMPERATURE=0.2
MANAGER_LLM_MAX_TOKENS=2000

# ============================================================
# Deep Agents Configuration
# ============================================================
DEEP_AGENTS_ENABLED=true

# Timeouts (seconds)
MANAGER_TIMEOUT=30
SUBAGENT_TIMEOUT=20
RAG_SEARCH_TIMEOUT=15

# Concurrency
MAX_CONCURRENT_SUBAGENTS=3
SUBAGENT_RETRY_ATTEMPTS=2

# ============================================================
# Cache Configuration
# ============================================================
ENABLE_CACHE=true
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_TTL=86400
CACHE_TTL_HOURS=72
CACHE_SIMILARITY_THRESHOLD=0.75
CACHE_MAX_ENTRIES=500

# ============================================================
# Hybrid RAG Configuration
# ============================================================
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K_RESULTS=12

# Hybrid search weights (BM25 + Vector)
BM25_WEIGHT=0.5
VECTOR_WEIGHT=0.5

# RRF Configuration
RRF_CANDIDATE_MULTIPLIER=12
RRF_BM25_WEIGHT=1.5
RRF_VECTOR_WEIGHT=1.0

# ============================================================
# CrossEncoder Reranking
# ============================================================
RERANK_ENABLED=true
RERANK_TOP_N=50
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ============================================================
# General Web Search (Serper API)
# ============================================================
SERPER_API_KEY=your_serper_api_key
SERPER_ENDPOINT=https://google.serper.dev/search
FINANCE_SERPER_COUNTRY=in
FINANCE_SERPER_LANGUAGE=en

# ============================================================
# Google OAuth2 Authentication
# ============================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501/

# User access lists (comma-separated emails)
EXECUTIVE_EMAILS=exec1@company.com,exec2@company.com
EMPLOYEE_EMAILS=emp1@company.com,emp2@company.com

# Development settings
ALLOW_DEV_LOGIN=false
DEV_TEST_EMAIL=dev@company.com
DEBUG_AUTH=false

# ============================================================
# Chainlit OAuth Configuration
# ============================================================
CHAINLIT_AUTH_SECRET=your-secure-random-secret-key-change-in-production
CHAINLIT_BASE_URL=http://localhost:8501
CHAINLIT_OAUTH_CALLBACK_URL=http://localhost:8501/oauth/callback
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================
# LangSmith Monitoring & Tracing (Optional)
# ============================================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=Inara

# Legacy aliases
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=Inara
LANGSMITH_TRACING=true

# ============================================================
# Legacy (for backward compatibility)
# ============================================================
APP_NAME=Inara
APP_DESCRIPTION=Your intelligent HR assistant powered by Deep Agents
